	MODELVIEW_NORMAL_MATRIX = mat3(MODELVIEW_MATRIX);
}



void fragment() {
	vec2 base_uv = UV;
	vec4 emission_tex = texture(texture_emission, base_uv);
	emission_tex *= COLOR * emission;
	
	ALBEDO = vec3(0.0, 0.0, 0.0);
	EMISSION = emission_tex.xyz;
	
	ALPHA = emission_tex.a;
